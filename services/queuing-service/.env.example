# Queuing Service Environment Configuration

# Server Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/realtime_connect_queuing?schema=public"

# Redis Configuration (for caching and queue management)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=1

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-for-queuing-service"
JWT_EXPIRATION="7d"

# Service Communication
USER_SERVICE_URL="http://localhost:3001"
INTERACTION_SERVICE_URL="http://localhost:3003"

# Matching Algorithm Configuration
MATCH_TIMEOUT_MINUTES=10
MAX_QUEUE_SIZE=10000
MATCH_BATCH_SIZE=50
MATCHING_INTERVAL_SECONDS=5

# Location Configuration
MAX_DISTANCE_KM=100
DEFAULT_RADIUS_KM=50

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/queuing-service.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100