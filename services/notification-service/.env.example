# Server Configuration
PORT=3460
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/notification_service_db"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-for-notification-service"
JWT_EXPIRE_TIME="24h"

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Firebase Configuration
FIREBASE_PROJECT_ID="your-firebase-project-id"
FIREBASE_CLIENT_EMAIL="your-firebase-client-email"
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_DATABASE_URL="https://your-project.firebaseio.com"

# APNs Configuration (Apple Push Notifications)
APNS_KEY_ID="your-apns-key-id"
APNS_TEAM_ID="your-apns-team-id"
APNS_PRIVATE_KEY_PATH="/path/to/apns-private-key.p8"
APNS_BUNDLE_ID="com.yourapp.bundleid"
APNS_PRODUCTION=false

# Notification Settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000
BATCH_SIZE=100
QUEUE_CONCURRENCY=10

# Service Discovery
USER_SERVICE_URL="http://localhost:3456"
INTERACTION_SERVICE_URL="http://localhost:3457"
COMMUNICATION_SERVICE_URL="http://localhost:3461"

# Analytics
ANALYTICS_AGGREGATION_INTERVAL="0 0 * * *"
CLEANUP_OLD_NOTIFICATIONS_DAYS=30

# Quiet Hours (Default)
DEFAULT_QUIET_HOURS_START="22:00"
DEFAULT_QUIET_HOURS_END="08:00"

# Template Settings
TEMPLATE_CACHE_TTL=3600
IMAGE_CACHE_TTL=86400