# Analytics Platform - Production Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://analytics:your_secure_password@analytics-db:5432/analytics
POSTGRES_USER=analytics
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=analytics

# Redis Configuration
REDIS_URL=redis://analytics-redis:6379

# Mixpanel Configuration
MIXPANEL_TOKEN=your_mixpanel_project_token
MIXPANEL_SECRET=your_mixpanel_api_secret

# ETL Configuration
ETL_SCHEDULE_DAILY=0 2 * * *
ETL_SCHEDULE_HOURLY=0 * * * *
ETL_BATCH_SIZE=1000
ETL_MAX_RETRIES=3

# API Configuration
API_PORT=3008
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100
CACHE_TTL=300

# Service URLs (Internal Docker Network)
USER_SERVICE_URL=http://user-service:3001
QUEUING_SERVICE_URL=http://queuing-service:3002
INTERACTION_SERVICE_URL=http://interaction-service:3003
COMMUNICATION_SERVICE_URL=http://communication-service:3004
HISTORY_SERVICE_URL=http://history-service:3005
NOTIFICATION_SERVICE_URL=http://notification-service:3006
MODERATION_SERVICE_URL=http://moderation-service:3007
ADMIN_SERVICE_URL=http://admin-service:3009

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin123
PROMETHEUS_RETENTION=30d

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Performance Configuration
NODE_ENV=production
LOG_LEVEL=info
MAX_CONNECTION_POOL=20
QUERY_TIMEOUT=30000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Data Retention Configuration
RAW_DATA_RETENTION_DAYS=90
AGGREGATED_DATA_RETENTION_DAYS=730
LOG_RETENTION_DAYS=30