# Subscription Service Environment Variables

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/subscription_db"

# Server Configuration
PORT=3006
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (for billing notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Other Services URLs
USER_SERVICE_URL=http://localhost:3001
ANALYTICS_SERVICE_URL=http://localhost:3008
ADMIN_SERVICE_URL=http://localhost:3007

# Billing Configuration
DEFAULT_TRIAL_DAYS=7
DEFAULT_GRACE_PERIOD_DAYS=3
PAYMENT_RETRY_ATTEMPTS=3

# App Configuration
APP_NAME=Real-time Connect
APP_URL=https://yourapp.com
SUPPORT_EMAIL=support@yourapp.com