# Environment Variables for Docker Compose
# Copy this file to .env and update with your values

# ===========================================
# JWT CONFIGURATION (Required)
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ===========================================
# STRIPE CONFIGURATION (Optional - for subscription service)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ===========================================
# MIXPANEL CONFIGURATION (Optional - for analytics service)
# ===========================================
MIXPANEL_PROJECT_TOKEN=your_mixpanel_project_token
MIXPANEL_API_SECRET=your_mixpanel_api_secret

# ===========================================
# FIREBASE CONFIGURATION (Optional - for notification service)
# ===========================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key

# ===========================================
# AWS CONFIGURATION (Optional - for file uploads)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=production
LOG_LEVEL=info
