# Example Environment Configuration
# Copy this file to .env in each service directory and configure values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/realtime_connect
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=realtime_connect
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=realtime-connect-uploads

# Local file storage (fallback)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14

# ===========================================
# SERVICE URLS (Inter-service communication)
# ===========================================
USER_SERVICE_URL=http://localhost:3001
QUEUING_SERVICE_URL=http://localhost:3002
INTERACTION_SERVICE_URL=http://localhost:3003
HISTORY_SERVICE_URL=http://localhost:3004
COMMUNICATION_SERVICE_URL=http://localhost:3005

# ===========================================
# SOCKET.IO CONFIGURATION
# ===========================================
SOCKETIO_CORS_ORIGIN=http://localhost:3000
SOCKETIO_TRANSPORTS=websocket,polling
SOCKETIO_PING_TIMEOUT=60000
SOCKETIO_PING_INTERVAL=25000

# ===========================================
# QUEUE CONFIGURATION
# ===========================================
QUEUE_DEFAULT_TIMEOUT=300
QUEUE_MAX_SIZE=1000
MATCH_TIMEOUT=30
CALL_DURATION=180

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=3600

# ===========================================
# MONITORING & HEALTH CHECKS
# ===========================================
HEALTH_CHECK_TIMEOUT=5000
METRICS_ENABLED=true
METRICS_PORT=9090

# ===========================================
# EMAIL CONFIGURATION (Future feature)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@realtime-connect.com

# ===========================================
# PUSH NOTIFICATIONS (Future feature)
# ===========================================
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_PRIVATE_KEY_PATH=./certs/apns-private-key.p8

# ===========================================
# ANALYTICS (Future feature)
# ===========================================
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# ===========================================
# DEVELOPMENT SPECIFIC
# ===========================================
# Enable debug logging
DEBUG=realtime-connect:*

# Enable hot reload
HOT_RELOAD=true

# Disable auth for testing (NEVER use in production)
DISABLE_AUTH=false

# Mock external services for testing
MOCK_S3=false
MOCK_REDIS=false